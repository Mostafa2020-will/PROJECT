@using (Ajax.BeginForm("addproduct", "products", new AjaxOptions()
{
    UpdateTargetId = "productsaved",
    HttpMethod = "post",
    InsertionMode = InsertionMode.InsertAfter
}))
{
<div>
    <label>product name:</label>
    @Html.TextBox("productname1")
    <label>product price:</label>
    @Html.TextBox("pprice")
    <input type="submit" name="name" value="add" />
</div>
}
 <ul id="productsaved">
   
</ul>



@using (Ajax.BeginForm("partialsearch", "products", new AjaxOptions()
{
    UpdateTargetId = "grid5",
    HttpMethod = "post",
    InsertionMode = InsertionMode.Replace
}))
{
    <div>
        <label>product name:</label>
        @Html.TextBox("productname")
        <input type="submit" name="name" value="search" />
    </div>
}
<div id="grid5">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>
